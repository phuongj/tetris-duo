<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:gravity="center"
        android:text="@string/instructions_label" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_one" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_two" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_three" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_four" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_five" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_six" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20sp"
        android:textColor="@color/text"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/instructions_seven" />

    <Button
        android:id="@+id/main_menu_button"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/main_menu_button_label"/>

</LinearLayout>